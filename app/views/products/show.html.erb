<div class="column2">
    <h1><%= @product.name %></h1>
    <h3>Country of Origin: <%= @product.country_of_origin%></h3>
    <h3>Price per bushel: $<%= @product.cost%></h3>
</div>


    <div class="col-md-6">
      <% if @product.reviews.any? %>
        <h4>Recent reviews for this product:</h4>
        <h5><% @product.reviews.each do |review| %></h5>
        <p><%= review.content_body %></p>
        <p>Author:<%= review.author %></p>
        <p>Rating: <%= review.rating %></p>

        <% end %>
      <% end %>
      </div>

     <div class="center"><%= link_to "Write a Review", new_product_review_path(@product)%></div>
     <br>
     <%= link_to "Update Product", edit_product_path(@product) %>
      <br>
      <%= link_to "Delete", product_path(@product),
      :data => {:confirm => "are you sure?", :method => "delete"} %>
      <br>
      <%= link_to "Back to Main", products_path %>
